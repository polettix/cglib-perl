our $SHARED_LOG_TYPES = { # any category is printed by default
   exception => 1,
   read  => 0,
   intro => 1,
   intro_outcome => 0,
   turn => 0,
   turn_outcome => 0,
};
our $SHARED_FH = \*STDIN;
our $TESTING = $ENV{TESTING} // 0;

