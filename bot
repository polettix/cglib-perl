## SPECIFIC BOT STUFF BELOW HERE
########################################################################

package MyRound;
use strict;
use warnings;
use EMo 'default'; # build default builder coerce is required option chain
use experimental qw< signatures postderef >;
no warnings qw< experimental::signatures experimental::postderef >;

extends 'Base'; # gets logging & reading capabilities

has $_ for qw< foo bar >; # your round members

# EXAMPLE round parsing skeleton here. $bot allows getting Bot-related
# member variables, if necessary
sub read_new ($package, $bot = undef) {
   my $self = (ref($package) || $package)->new; # default log & read

   my $n = 0 + $self->readline;
   $self->parse_foo($self->readchomplines($n));
   $self->parse_bar($self->readchomplines($n));
   # ... and so on

   return $self;
}

package MyBot;
use strict;
use warnings;
use EMo 'default'; # build default builder coerce is required option chain
use experimental qw< signatures postderef >;
no warnings qw< experimental::signatures experimental::postderef >;

extends 'Bot';

has $_ for qw< round >;

sub parse_intro ($self) { # $self->readline or $self->readchomplines
   return $self;
}

sub run_intro ($self) {
   $self->log(intro => "TESTING: $TESTING");
   return; # return is printed out!
}

sub parse_turn ($self) {
   $self->round(MyRound->read_new($self));
   return $self;
}

sub run_turn ($self) {
   my @answer_lines = ('hello', 'world');
   return @answer_lines; # return is printed out!
}

MyBot->run unless caller;
